{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "types": ["node"],
    "target": "ES2022",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "rootDir": "./src",
    "outDir": "./dist"           
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": [
    "node_modules/", "build/", "dist/", ".cache/", ".tmp/",
    "src/admin/", "**/*.test.*", "src/plugins/**"
  ]
}
